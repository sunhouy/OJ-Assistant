{
  "manifest_version": 3,
  "name": "OJ助手",
  "version": "1.0",
  "description": "自动获取OJ题目并生成代码解决方案",

  "icons": {
    "16": "icons/16.ico",
    "32": "icons/32.ico",
    "48": "icons/48.ico",
    "128": "icons/128.ico"
  },

  "action": {
  "default_title": "OJ助手",
  "default_icon": "icons/icon.png"
   },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.educoder.net/tasks/*",
    "https://www.educoder.net/shixuns/*",
    "https://www.educoder.net/classrooms/*",
    "https://yhsun.cn/oj/*",
    "https://leetcode.cn/problems/*",
    "https://www.nowcoder.com/practice/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.educoder.net/tasks/*",
        "https://www.educoder.net/shixuns/*",
        "https://www.educoder.net/classrooms/*",
        "https://yhsun.cn/oj/*",
        "https://leetcode.cn/problems/*",
        "https://www.nowcoder.com/practice/*"
      ],
      "js": [ "content.js" ],
      "css": [ "content.css" ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [ "content.css" ],
      "matches": [
        "https://www.educoder.net/*",
        "https://yhsun.cn/*",
        "https://leetcode.cn/*",
        "https://www.nowcoder.com/*"
      ]
    }
  ]
}